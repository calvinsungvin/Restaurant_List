<header>
  <!-- navigation -->
  <nav class="navbar navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="/">
        <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/6227/restaurant-list-logo.png"
          width="30" height="30" class="d-inline-block align-top" alt="好。吃">
        我的餐廳清單
      </a>
    </div>
  </nav>

  <div class="banner"></div>
</header>
<div class="container">
  <form action="/restaurants/{{ restaurant._id }}?_method=PUT" method="post">
    <h1 class="mb-1 restaurant-show-title">
      <input type="text" placeholder="name" name="name" value="{{ restaurant.name }}">
    </h1>
    <div class="row justify-content-end mb-3">
      <a href="/" class="btn btn-secondary mr-3">返回</a>
      <button type="submit" class="btn btn-primary mr-3">存檔</button>
    </div>
    <div class="row align-items-center mb-3">
      <div class="col-sm-2 text-secondary text-right pr-0">
        類別：
      </div>
      <div class="col-sm-10">
        <input type="text" class="form-control" placeholder="category" name="category" value="{{ restaurant.category }}">
      </div>
    </div>
    <div class="row align-items-center mb-3">
      <div class="col-sm-2 text-secondary text-right pr-0">
        地址：
      </div>
      <div class="col-sm-10">
        <input type="text" class="form-control" placeholder="location" name="location" value="{{ restaurant.location }}">
      </div>
    </div>
    <div class="row align-items-center mb-3">
      <div class="col-sm-2 text-secondary text-right pr-0">
        電話：
      </div>
      <div class="col-sm-10">
        <input type="text" class="form-control" placeholder="phone" name="phone" value="{{ restaurant.phone }}">
      </div>
    </div>
    <div class="row mb-3">
      <div class="col-sm-2 text-secondary text-right pr-0">
        簡介：
      </div>
      <div class="col-sm-10">
        <textarea class="text-left form-control" name="description" rows="3">{{ restaurant.description }}</textarea>
      </div>
    </div>
    <div class="row align-items-center mb-3">
      <div class="col-sm-2 text-secondary text-right pr-0">
        圖片：
      </div>
      <div class="col-sm-10">
        <input type="text" class="form-control" placeholder="image" name="image" value="{{ restaurant.image }}">
      </div>
    </div>
    <div class="row">
      <img class="rounded mx-auto d-block w-100" src="{{ restaurant.image }}" alt="{{ restaurant.name }}"
        style="max-width: 600px;">
    </div>
  </form>
</div>